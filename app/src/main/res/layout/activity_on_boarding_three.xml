<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardingAndSplash.OnBoardingThreeActivity">


  <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="0dp"
          android:src="@drawable/image"
          android:layout_height="275dp"
          android:scaleType="fitXY"
          android:layout_marginTop="177dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />


      <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Fast reservation with technicians
\n and craftsmen"
          android:textColor="#0E9CF9"
          android:padding="5dp"

          android:textSize="21sp"
          android:fontFamily="@font/seg_ui_semibold"
          android:layout_marginTop="497dp"

          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <Button
          android:id="@+id/btn_onBoardingThree"
          android:layout_width="330dp"
          android:layout_height="55dp"


          android:background="@drawable/shape_button"
          android:shadowColor="#E9C75E"
          android:shadowDy="2"
          android:text="NEXT"

          android:layout_marginTop="723dp"
          android:layout_marginBottom="25dp"
          android:textColor="@color/white"
          android:textSize="18sp"
          android:fontFamily="@font/segoe_ui_bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


  </ScrollView>



  </androidx.constraintlayout.widget.ConstraintLayout>