<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DialogFragmentInternet">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInternet"
        android:layout_width="410dp"
        android:layout_height="490dp"
        android:outlineAmbientShadowColor="@color/color_background"
        android:outlineSpotShadowColor="@color/color_background"
        app:cardCornerRadius="30sp"

        app:cardElevation="13sp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/imageViewInternet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                android:scaleType="centerCrop"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/intrnet" />

            <TextView
                android:id="@+id/internet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_bold"

                android:layout_marginTop="25sp"
                android:gravity="center"
                android:text="Sorry ! no internet connection"
                android:textColor="@color/black"
                android:textSize="16sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.067" />

            <Button
                android:id="@+id/btn_connection"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12sp"
                android:background="@drawable/shape_button"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Connection"
                android:textAllCaps="false"
                android:textColor="@color/white"

                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageViewInternet"
                app:layout_constraintStart_toStartOf="@+id/imageViewInternet" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>