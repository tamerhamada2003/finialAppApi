<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="345dp"

        app:cardCornerRadius="25dp"
        android:outlineAmbientShadowColor="@color/color_background"
        android:outlineSpotShadowColor="@color/color_background"

        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_problem_home"
                android:layout_width="match_parent"
                android:layout_height="160dp"

                android:scaleType="centerCrop"
                android:src="@drawable/image_home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_date_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:background="@drawable/shape_btn"
                android:fontFamily="@font/segoe_ui_bold"

                android:padding="10dp"
                android:text="28 Nov 2019"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"


                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/image_view_rate_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/rate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_problem_home" />


            <TextView
                android:id="@+id/tv_rate_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="4.5"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_rate_home"
                app:layout_constraintEnd_toEndOf="@+id/image_view_rate_home"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/image_view_rate_home"
                app:layout_constraintTop_toTopOf="@+id/image_view_rate_home"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/tv_service_type1_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/seg_ui_semibold"
                android:text="Service Type : "

                android:textColor="#7F8FA6"

                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/image_view_rate_home"
                app:layout_constraintTop_toBottomOf="@+id/image_view_problem_home" />


            <TextView
                android:id="@+id/tv_service_work_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"
                android:fontFamily="@font/seg_ui_semibold"
                android:text="Carpenter"
                android:textColor="#0E4DFB"

                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/tv_service_type1_home"
                app:layout_constraintTop_toBottomOf="@+id/image_view_problem_home" />


            <TextView
                android:id="@+id/id_order_home"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Order #52001"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_problem_home" />



            <ImageView
                android:id="@+id/image_view_location_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_pin_drop_24px"

                app:layout_constraintStart_toEndOf="@+id/image_view_rate_home"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_type1_home" />


            <TextView
                android:id="@+id/tv_location_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/image_view_location_home"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_type1_home" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_rate_home">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/image_view_user_home"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/tamer1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_name_userTow_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Tamer Hamada"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_home" />

            <Button
                android:id="@+id/btn_details_home"
                android:layout_width="94dp"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"

                android:background="@drawable/shape_btn"
                android:text="Details"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>